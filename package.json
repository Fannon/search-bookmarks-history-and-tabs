{
  "name": "search-bookmarks-history-and-tabs",
  "version": "1.16.0",
  "description": "Browser extension to (fuzzy) search and navigate bookmarks, history and open tabs.",
  "main": "index.js",
  "type": "module",
  "dependencies": {
    "@leeoniya/ufuzzy": "^1.0.19",
    "@yaireo/tagify": "^4.35.4",
    "js-yaml": "^4.1.0",
    "mark.js": "^8.11.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.0",
    "@jest/globals": "^30.2.0",
    "@playwright/test": "^1.56.1",
    "archiver": "^7.0.1",
    "chokidar": "^4.0.3",
    "esbuild": "^0.25.11",
    "fs-extra": "^11.3.2",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.6",
    "serve": "^14.2.5",
    "simple-git-hooks": "^2.13.1"
  },
  "scripts": {
    "prepare": "simple-git-hooks",
    "clean": "node bin/clean.js",
    "build": "npm run clean && npm run build:update-libs && npm run build:bundle && npm run build:update-manifests && npm run build:create-dist && npm run size",
    "build:bundle": "node bin/bundle.js",
    "build:update-libs": "node bin/updateLibs.js",
    "build:create-dist": "node bin/createDist.js",
    "build:update-manifests": "node bin/updateManifests.js",
    "benchmark": "hyperfine --warmup 2 --runs 5 --export-json hyperfine.json 'npm run clean' 'npm run lint' 'npm run format' 'npm run build' 'npm run test' 'npm run e2e",
    "test": "npm run test:unit",
    "test:watch": "npm run test:unit:watch",
    "test:e2e": "playwright test --project=chromium",
    "test:e2e:html": "playwright test --project=chromium --reporter=html",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:edge": "playwright test --project=edge",
    "test:unit": "node --experimental-vm-modules --disable-warning=ExperimentalWarning ./node_modules/jest/bin/jest.js",
    "test:unit:watch": "node --experimental-vm-modules --disable-warning=ExperimentalWarning ./node_modules/jest/bin/jest.js --watch",
    "test:unit:coverage": "node --experimental-vm-modules --disable-warning=ExperimentalWarning ./node_modules/jest/bin/jest.js --coverage",
    "test:ci": "npm run lint && npm run test:unit && npm run test:e2e",
    "lint": "biome check --error-on-warnings .",
    "lint:fix": "biome check --write .",
    "lint:staged": "lint-staged",
    "format": "biome format . --write",
    "format:check": "biome format .",
    "start": "serve -p 8080 ./popup/",
    "start:dist": "serve -p 8080 ./dist/chrome/popup/",
    "size": "node bin/size.js",
    "analyze": "node bin/analyze-code.js",
    "watch": "node bin/watch.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Fannon/search-tabs-bookmarks-and-history.git"
  },
  "keywords": [
    "chrome",
    "extension",
    "search",
    "fuzzy",
    "search",
    "history",
    "bookmarks",
    "tabs"
  ],
  "author": "Simon Heimler",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Fannon/search-tabs-bookmarks-and-history/issues"
  },
  "homepage": "https://github.com/Fannon/search-tabs-bookmarks-and-history#readme",
  "simple-git-hooks": {
    "pre-commit": "npm run lint:staged"
  },
  "lint-staged": {
    "*.{js,mjs}": [
      "biome check --write --unsafe --files-ignore-unknown=true"
    ],
    "*.{css,html,json,md}": [
      "biome format --write --files-ignore-unknown=true"
    ]
  }
}
