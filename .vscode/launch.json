{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Jest: Current Test File",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "args": [
        "--runTestsByPath",
        "${relativeFile}",
        "--runInBand"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_OPTIONS": "--experimental-vm-modules"
      },
      "disableOptimisticBPs": true
    }
  ]
}
